}

.percent {
    position: absolute;
    border-right: 2px solid var(--text);
    color: var(--text);
    width: 50px;
    height: 390px;
    display: flex;
    padding-bottom: 40px;
    flex-direction: column;
    justify-content: space-between;
}

.percent span {
    font-size: 15px;
    height: 12px;
    line-height: 12px;
    text-align: right;
    padding-right: 4px;
