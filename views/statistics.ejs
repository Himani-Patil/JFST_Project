}

.options {
    position: relative;
    left: 50px;
    background: var(--background1);
    width: 350px;
    color: var(--text);
    border-top: 10px solid var(--text);
    display: flex;
    justify-content: space-between;
    transition: 1s;
}

.option::after {
    content: '';
    position: absolute;
    display: block;
    bottom: 27px;
    margin-left: 10px;
    background: 
    linear-gradient(#5b9dff,#96c6e0);
    width: 40px;
  transition: 1s;
}
.option:nth-child(1)::after{
    height: calc((363px / 100) * 100);
}
.option:nth-child(2)::after{
    height: calc((363px / 100) * 95);
}
.option:nth-child(3)::after{
    height: calc((363px / 100) * 95);
}
.option:nth-child(4)::after{
    height: calc((363px / 100) * 50 );
}

.option:nth-child(5)::after{
    height: calc((363px / 100) * 30);
}
</style>

